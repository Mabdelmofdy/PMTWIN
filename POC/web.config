<?xml version="1.0" encoding="UTF-8"?>
<!-- IIS/Windows Server configuration for local development -->
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Admin routes -->
        <rule name="Admin Dashboard" stopProcessing="true">
          <match url="^admin/?$" />
          <action type="Rewrite" url="pages/admin/index.html" />
        </rule>
        <rule name="Admin Vetting" stopProcessing="true">
          <match url="^admin-vetting/?$" />
          <action type="Rewrite" url="pages/admin-vetting/index.html" />
        </rule>
        <rule name="Admin Moderation" stopProcessing="true">
          <match url="^admin-moderation/?$" />
          <action type="Rewrite" url="pages/admin-moderation/index.html" />
        </rule>
        <rule name="Admin Audit" stopProcessing="true">
          <match url="^admin-audit/?$" />
          <action type="Rewrite" url="pages/admin-audit/index.html" />
        </rule>
        <rule name="Admin Reports" stopProcessing="true">
          <match url="^admin-reports/?$" />
          <action type="Rewrite" url="pages/admin-reports/index.html" />
        </rule>
        
        <!-- Home route -->
        <rule name="Home" stopProcessing="true">
          <match url="^$" />
          <action type="Rewrite" url="pages/home/index.html" />
        </rule>
        
        <!-- Dashboard route -->
        <rule name="Dashboard" stopProcessing="true">
          <match url="^dashboard/?$" />
          <action type="Rewrite" url="pages/dashboard/index.html" />
        </rule>
        
        <!-- Projects routes -->
        <rule name="Projects" stopProcessing="true">
          <match url="^projects/?$" />
          <action type="Rewrite" url="pages/projects/index.html" />
        </rule>
        <rule name="Create Project" stopProcessing="true">
          <match url="^create-project/?$" />
          <action type="Rewrite" url="pages/projects/create/index.html" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Set default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>
  </system.webServer>
</configuration>
